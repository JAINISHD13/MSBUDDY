<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/c1"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="?attr/colorButtonNormal"
        app:cardElevation="10dp"
        app:cardCornerRadius="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt1"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="University Details"
                android:textColor="@color/cardview_dark_background"
                android:layout_centerHorizontal="true"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cgpa"
                android:text="UG CGPA out of 10"
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt1"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/edtxt1"
                android:textAlignment="center"
                android:background="@drawable/border_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_below="@+id/cgpa"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/backlogs"
                android:text="Backlogs"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtxt1"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/edt2"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backlogs"
                android:background="@drawable/border_file"
                android:textSize="24sp"
                android:inputType="number"/>

            <TextView
                android:id="@+id/workexp"
                android:text="Work Exp. Or Internship(In Months)"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt2"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/edt3"
                android:textAlignment="center"
                android:background="@drawable/border_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/workexp"
                android:inputType="number"
                android:textSize="24sp"
                />


            <TextView
                android:id="@+id/research"
                android:text="Research Paper"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt3"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/edt4"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/research"
                android:background="@drawable/border_file"
                android:inputType="number"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/txtback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="14dp"
                android:text="back"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="Proceed>>"
                android:textSize="25sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

